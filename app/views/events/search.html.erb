<h1>
<% if current_user.location == "Seattle" %>
Date Search
<% elsif current_user.location == "Tokyo" %>
宿泊希望日で検索してください
<% end %>
</h1>

<!-- 検索画面 -->
<%= form_tag search_path, method: :get do %>
 <div class="field">
   <%= date_select :start, params[:start] %>
   <%= submit_tag '検索' %>
 </div>
<% end %>

<!-- 結果表示 -->
<% if @dates.present? %>
  <% @dates.each do |date| %>
    <%= date.start %>
    <%= date.user.username %>
    <%= link_to "詳細", event_path(date) %>
    <%= link_to "予約", search_path, method: :post %>
  <% end %>
<% end %>
